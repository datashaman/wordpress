%head{ :profile => "http://gmpg.org/xfn/11" }
  %meta{ :http-equiv => "Content-Type", :content => get_bloginfo('html_type') }
  %title= wp_title('&laquo;', true, 'right').' '.get_bloginfo('name')
  %link{ :rel => 'stylesheet', :href => get_bloginfo('stylesheet_url'), :type => 'text/css', :media => 'screen' }
  %link{ :rel => 'pingback', :href => get_bloginfo('pingback_url') }

    - # BUG Not sure why this requires an extra level of indentation
    = haml_wp_head()

    %style{ :type => 'text/css', :media => 'screen' }
      - $image = (!empty($withcomments) and !is_single()) ? ('-'.get_bloginfo('text_direction')) : 'bgwide'
      :sass
        #page
          :background = url(<?= get_bloginfo('stylesheet_directory') ?>/images/kubrick<?= $image ?>.jpg) repeat-y top
          :border = none

  - if(is_singular())
    = wp_enqueue_script('comment-reply')
